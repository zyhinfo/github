<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE sqlMap          PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"          "http://ibatis.apache.org/dtd/sql-map-2.dtd"><sqlMap namespace="User">	<typeAlias alias="UserBean" type="com.idea.base.system.user.domain.UserBean"/>	<select id="getUserJSON" resultClass="java.util.HashMap" parameterClass="UserBean">		SELECT USER_ID,		       USER_NAME,		       USER_DESC,		       LOGON_NAME		  FROM T01_SYS_USER P where USER_ID <![CDATA[<>]]> '1'		  <dynamic>		  	<isNotEmpty property="userName">		  		and USER_NAME like '%'||#userName#||'%'		  	</isNotEmpty>		  	<isNotEmpty property="logonName">		  		and LOGON_NAME like '%'||#logonName#||'%'		  	</isNotEmpty>		  </dynamic>		  order by USER_ID desc	</select>	<select id="getUserJSONCount" resultClass="java.lang.Integer" parameterClass="UserBean">		SELECT COUNT(1)		  FROM T01_SYS_USER P  where USER_ID <![CDATA[<>]]> '1'		  <dynamic>		  	<isNotEmpty property="userName">		  		and USER_NAME like '%'||#userName#||'%'		  	</isNotEmpty>		  	<isNotEmpty property="logonName">		  		and LOGON_NAME like '%'||#logonName#||'%'		  	</isNotEmpty>		  </dynamic>	</select>	<insert id="saveUserAdd" parameterClass="UserBean">		insert into T01_SYS_USER (USER_ID, USER_NAME,LOGON_NAME,USER_DESC,PASSWORD)		VALUES ('$userId$', '$userName$', '$logonName$', '$userDesc$', #password#)			</insert>	<update id="saveUserEdit" parameterClass="UserBean">		update T01_SYS_USER 		   set USER_NAME='$userName$',		       LOGON_NAME='$logonName$',		       USER_DESC ='$userDesc$'		 where USER_ID='$userId$'	</update>	</sqlMap>