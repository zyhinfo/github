<%@ page language="java" contentType="text/html; charset=UTF-8"%><%@ include file="/jsp/base/core/taglibs.jsp"%><html>	<head>		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">		<script type="text/javascript">			var grid,quer;				        //表格	        $(function (){	        	init_page();	        	var pageSize = '${pageSize}';	            grid = $("#maingrid").ligerGrid({	                height:'99%',enabledSort:false,	                columns: [	                	{ display: '参数编号', name: 'PARAM_ID', align: 'left', width: 150  },	                	{ display: '参数名称', name: 'PARAM_NAME', align: 'left', width: 250 },	                	{ display: '更新时间', name: 'UPDATE_DATE', width: 150 },	                	{ display: '创建日期', name: 'CREATE_DATE', width: 150 },	                	{ display: '操作', isSort: false, width: 100, render: function (rowdata, rowindex, value){                    		return "<a href='${ctx}/ParamDetailAction.action?method=gotoParamDetailList&paramId="+rowdata.PARAM_ID+"'>明细</a>";                			}                		}	                ], 	                url:"${ctx}/ParamAction.action?method=getParamJSON",  	                pageSize:pageSize ,rownumbers:true,	                toolbar: { items: [	                	{ id:'1', text: '查询', click: itemclick, icon: 'search2' },	                	{ line: true },	                	{ id:'2', text: '增加', click: itemclick, icon: 'add' },	                	{ line: true },	                	{ id:'3', text: '修改', click: itemclick, icon: 'modify' },	                	{ line: true },	                	{ id:'4', text: '删除', click: itemclick, icon: 'delete' },	                	{ line: true },	                	{ id:'5', text: '功能说明', click: itemclick, icon: '' }	                ]}	            });	            	            $("#pageloading").hide();	        });	        			function itemclick(item){				var id = item.id;	            var text = item.text;	            if(id == '1'){		        	query=ligerDialog_open(text,$("#targetQuery"),"queryOK","","");	            }else if(id == '2'){	            	liger.get("paramName").setValue("");	            	ligerDialog_open(text,$("#target"),"addOK","","");	            }else if(id == '3'){	            	var row = grid.getSelectedRow();            		if (!row) { warn_alert('请选择行'); return; }            		$("#paramId").val(row.PARAM_ID);            		liger.get("paramName").setValue(row.PARAM_NAME);            		ligerDialog_open(text,$("#target"),"editOK","","");	            }else if(id == '4'){	            	var row = grid.getSelectedRow();            		if (!row) { warn_alert('请选择行'); return; }            		$.ligerDialog.confirm('是否删除参数？', function (isOk) {            			if(isOk){		            		$.post("${ctx}/ParamAction.action?method=deleteParam&anticache="									+ Math.floor(Math.random() * 10000), {								id : row.PARAM_ID							}, function(info) {								if (info.info == undefined) {									info = eval("(" + info + ")");								}								if (info.info == 'ok') {									grid.reload();								} else {									error_alert("${ctx}","删除参数失败","编号："+row.PARAM_ID);								}							});						}            		});	            }else if(id == '5'){	            	showMenuDesc(text);	            }	        }	       //查询点击确定按钮			function queryOK(item, dialog){				var gridManager = $("#maingrid").ligerGetGridManager();        		if (!gridManager) return;   				gridManager.setOptions({parms:[{name : "paramName",   					value:liger.get("queryParamName").getValue()}]});   				gridManager.loadData(true);   				dialog.hidden();			}			//新增点击确定按钮			function addOK(item, dialog){				var param = {					paramName : liger.get("paramName").getValue()				};				$.post("${ctx }/ParamAction.action?method=saveParamAdd&anticache="						+ Math.floor(Math.random() * 10000), param, function(info) {					if (info.info == undefined) {						info = eval("(" + info + ")");					}					if (info.info == 'ok') {	            		grid.reload();	            		dialog.hidden();					} else {						error_alert("${ctx}","新增参数失败",mapToString(param));					}				});			}			//编辑点击确定按钮			function editOK(item, dialog){				var param = {					paramId : $("#paramId").val(),					paramName : liger.get("paramName").getValue()				};				$.post("${ctx }/ParamAction.action?method=saveParamEdit&anticache="						+ Math.floor(Math.random() * 10000), param, function(info) {					if (info.info == undefined) {						info = eval("(" + info + ")");					}					if (info.info == 'ok') {	            		grid.reload();	            		dialog.hidden();					} else {						error_alert("${ctx}","修改参数失败",mapToString(param));					}				});							}		</script>	</head>	<body style="overflow-x:hidden; padding:2px;">		<div class="l-loading" style="display:block" id="pageloading"></div>    	<div id="maingrid"></div>    	<div id="targetQuery" class="self-form" style="display:none;">        	<table class="self-table">    			<tr>    				<td width="90px">参数名称</td>    				<td><input type="text" id="queryParamName" value=""></td>    			</tr>    		</table>    	</div>    	<div id="target" class="self-form" style="display:none;">        	<table class="self-table">    			<tr>    				<td width="90px">参数名称</td>    				<td><input type="text" id="paramName" value=""></td>    			</tr>    		</table>    	</div>    	<input type="hidden" id="paramId" value=""/>	</body></html>