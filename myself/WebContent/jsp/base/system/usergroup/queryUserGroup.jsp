<%@ page language="java" contentType="text/html; charset=UTF-8"%><%@ include file="/jsp/base/core/taglibs.jsp"%><!DOCTYPE html><html>	<head>		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">		<script type="text/javascript">			var grid,quer;	        //表格	        $(function (){	        	init_page();	            grid = $("#maingrid").ligerGrid({	                height:'97%',enabledSort:false,usePager:false,rownumbers:true,	                columns: [	                	{ display: '用户组编号', name: 'USERGROUP_ID', align: 'left', width: 150  },	                	{ display: '用户组名称', name: 'USERGROUP_NAME', align: 'left', width: 200 },	                	{ display: '用户组描述', name: 'USERGROUP_DESC', align: 'left', width: 400 },	                	{ display: '操作', isSort: false, width: 100, render: function (rowdata, rowindex, value){                    		return "<a href='${ctx}/UserGroupRoleAction.action?method=gotoUserGroupRoleList&userGroupId="+rowdata.USERGROUP_ID+"'>角色维护</a>";                		}                		}	                ], 	                url:"${ctx}/UserGroupAction.action?method=getUserGroupJSON",  	                toolbar: { items: [	                	{ id:'1', text: '查询', click: itemclick, icon: 'search2' },	                	{ line: true },	                	{ id:'2', text: '增加', click: itemclick, icon: 'add' },	                	{ line: true },	                	{ id:'3', text: '修改', click: itemclick, icon: 'modify' },	                	{ line: true },	                	{ id:'4', text: '删除', click: itemclick, icon: 'delete' },	                	{ line: true },	                	{ id:'5', text: '功能说明', click: itemclick, icon: '' }	                ]}	            });	            	            $("#pageloading").hide();	        });	        			function itemclick(item){				var id = item.id;	            var text = item.text;	            if(id == '1'){		        	query=ligerDialog_open(text,$("#targetQuery"),"queryOK","","");	            }else if(id == '2'){	            	liger.get("userGroupName").setValue("");	            	liger.get("userGroupDesc").setValue("");	            	ligerDialog_open(text,$("#target"),"addOK","","230");	            }else if(id == '3'){	            	var row = grid.getSelectedRow();            		if (!row) { warn_alert('请选择行'); return; }            		$("#userGroupId").val(row.USERGROUP_ID);            		liger.get("userGroupName").setValue(row.USERGROUP_NAME);            		liger.get("userGroupDesc").setValue(row.USERGROUP_DESC);            		ligerDialog_open(text,$("#target"),"editOK","","230");	            }else if(id == '4'){	            	var row = grid.getSelectedRow();            		if (!row) { warn_alert('请选择行'); return; }            		$.ligerDialog.confirm('是否删除用户组？', function (isOk) {            			if(isOk){            				$.post("${ctx}/UserGroupAction.action?method=deleteUserGroup&anticache="									+ Math.floor(Math.random() * 10000), {								id : row.USERGROUP_ID							}, function(info) {								if (info.info == undefined) {									info = eval("(" + info + ")");								}								if (info.info == 'ok') {									grid.reload();								} else {									error_alert("${ctx}","删除用户组失败","编号："+row.USERGROUP_ID);								}							});            			}            			            		});	            }else if(id == '5'){	            	showMenuDesc(text);	            }	        }	       //查询点击确定按钮			function queryOK(item, dialog){				var gridManager = $("#maingrid").ligerGetGridManager();        		if (!gridManager) return;   				gridManager.setOptions({parms:[   					{name : "userGroupName",value:liger.get("queryUserGroupName").getValue()}   					]});   				gridManager.loadData(true);   				dialog.hidden();			}			//新增点击确定按钮			function addOK(item, dialog){				var param = {					userGroupName : liger.get("userGroupName").getValue(),					userGroupDesc : liger.get("userGroupDesc").getValue()				};				$.post("${ctx }/UserGroupAction.action?method=saveUserGroupAdd&anticache="						+ Math.floor(Math.random() * 10000), param, function(info) {					if (info.info == undefined) {						info = eval("(" + info + ")");					}					if (info.info == 'ok') {	            		grid.reload();	            		dialog.hidden();					} else {						error_alert("${ctx}","新增用户组失败",mapToString(param));					}				});			}			//编辑点击确定按钮			function editOK(item, dialog){				var param = {					userGroupId : $("#userGroupId").val(),					userGroupName : liger.get("userGroupName").getValue(),					userGroupDesc : liger.get("userGroupDesc").getValue()				};				$.post("${ctx }/UserGroupAction.action?method=saveUserGroupEdit&anticache="						+ Math.floor(Math.random() * 10000), param, function(info) {					if (info.info == undefined) {						info = eval("(" + info + ")");					}					if (info.info == 'ok') {	            		grid.reload();	            		dialog.hidden();					} else {						error_alert("${ctx}","修改用户组失败",mapToString(param));					}				});			}			function getTypeData(){	            return [	             { Code: 'VARCHAR', Name: '文字' },	             { Code: 'NUMBER', Name: '数字' }	             ];	         }	         		</script>	</head>	<body style="overflow-x:hidden; padding:2px;">		<div class="l-loading" style="display:block" id="pageloading"></div>    	<div id="maingrid"></div>    	<div id="targetQuery" class="self-form" style="display:none;">        	<table class="self_table">    			<tr>    				<td width="90px">用户组名称</td>    				<td><input type="text" id="queryUserGroupName" value=""></td>    			</tr>    		</table>    	</div>    	<div id="target" class="self-form" style="display:none;">        	<table class="self_table">    			<tr>    				<td width="90px">用户组名称</td>    				<td><input type="text" id="userGroupName" value=""></td>    			</tr>    			<tr>    				<td width="90px">用户组描述</td>    				<td><input type="text" id="userGroupDesc" value=""></td>    			</tr>    		</table>    	</div>    	<input type="hidden" id="userGroupId" value="">	</body></html>