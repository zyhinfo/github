<%@ page language="java" contentType="text/html; charset=UTF-8"%><%@ include file="/jsp/base/core/taglibs.jsp"%><html>	<head>		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">		<script type="text/javascript">			var grid,quer;				        //表格	        $(function (){	       		init_page();	        	var pageSize = '${pageSize}';	            grid = $("#maingrid").ligerGrid({	                height:'99%',enabledSort:false,	                columns: [	                	{ display: '用户编号', name: 'USER_ID', align: 'left', width: 150  },	                	{ display: '用户名称', name: 'USER_NAME', align: 'left', width: 150 },	                	{ display: '用户描述', name: 'USER_DESC', align: 'left', width: 250 },	                	{ display: '登录名', name: 'LOGON_NAME', align: 'left', width: 100 },	                	{ display: '操作', isSort: false, width: 100, render: function (rowdata, rowindex, value){                    		return "<a href='${ctx}/UserDetailAction.action?method=gotoUserDetailList&userId="+rowdata.USER_ID+"'>分配权限</a>";                			}                		}	                ], 	                url:"${ctx}/UserAction.action?method=getUserJSON",  	                pageSize:pageSize ,rownumbers:true,	                toolbar: { items: [	                	{ id:'1', text: '查询', click: itemclick, icon: 'search2' },	                	{ line: true },	                	{ id:'2', text: '增加', click: itemclick, icon: 'add' },	                	{ line: true },	                	{ id:'3', text: '修改', click: itemclick, icon: 'modify' },	                	{ line: true },	                	{ id:'4', text: '删除', click: itemclick, icon: 'delete' },	                	{ line: true },	                	{ id:'5', text: '功能说明', click: itemclick, icon: '' }	                ]}	            });	            	            $("#pageloading").hide();	        });	        			function itemclick(item){				var id = item.id;	            var text = item.text;	            if(id == '1'){		        	query=ligerDialog_open(text,$("#targetQuery"),"queryOK","","");	            }else if(id == '2'){	            	liger.get("addUserName").setValue("");	            	liger.get("addLogonName").setValue("");	            	liger.get("addPassword").setValue("");	            	liger.get("addUserDesc").setValue("");	            	ligerDialog_open(text,$("#targetAdd"),"addOK","","250");	            }else if(id == '3'){	            	var row = grid.getSelectedRow();            		if (!row) { warn_alert('请选择行'); return; }            		$("#userId").val(row.USER_ID);            		liger.get("editUserName").setValue(row.USER_NAME);	            	liger.get("editLogonName").setValue(row.LOGON_NAME);	            	liger.get("editUserDesc").setValue(row.USER_DESC);            		ligerDialog_open(text,$("#targetEdit"),"editOK","","");	            }else if(id == '4'){	            	var row = grid.getSelectedRow();            		if (!row) { warn_alert('请选择行'); return; }            		$.ligerDialog.confirm('是否删除用户？', function (isOk) {            			if(isOk){		            		$.post("${ctx}/UserAction.action?method=deleteUser&anticache="									+ Math.floor(Math.random() * 10000), {								id : row.USER_ID							}, function(info) {								if (info.info == undefined) {									info = eval("(" + info + ")");								}								if (info.info == 'ok') {									grid.reload();								} else {									error_alert("${ctx}","删除用户失败","编号："+row.USER_ID);								}							});						}            		});	            }else if(id == '5'){	            	showMenuDesc(text);	            }	        }	       //查询点击确定按钮			function queryOK(item, dialog){				var gridManager = $("#maingrid").ligerGetGridManager();        		if (!gridManager) return;   				gridManager.setOptions({parms:[   					{name : "userName", value:liger.get("queryUserName").getValue()},   					{name : "logonName", value:liger.get("queryLogonName").getValue()}   					]});   				gridManager.loadData(true);   				dialog.hidden();			}			//新增点击确定按钮			function addOK(item, dialog){				var param = {					userName : liger.get("addUserName").getValue(),					logonName : liger.get("addLogonName").getValue(),					password : liger.get("addPassword").getValue(),					userDesc : liger.get("addUserDesc").getValue()				};				$.post("${ctx }/UserAction.action?method=saveUserAdd&anticache="						+ Math.floor(Math.random() * 10000), param, function(info) {					if (info.info == undefined) {						info = eval("(" + info + ")");					}					if (info.info == 'ok') {	            		grid.reload();	            		dialog.hidden();					} else {						error_alert("${ctx}","新增用户失败",mapToString(param));					}				});			}			//编辑点击确定按钮			function editOK(item, dialog){				var param = {					userId : $("#userId").val(),					userName : liger.get("editUserName").getValue(),					logonName : liger.get("editLogonName").getValue(),					userDesc : liger.get("editUserDesc").getValue()				};				$.post("${ctx }/UserAction.action?method=saveUserEdit&anticache="						+ Math.floor(Math.random() * 10000), param, function(info) {					if (info.info == undefined) {						info = eval("(" + info + ")");					}					if (info.info == 'ok') {	            		grid.reload();	            		dialog.hidden();					} else {						error_alert("${ctx}","修改用户失败",mapToString(param));					}				});							}					</script>	</head>	<body style="overflow-x:hidden; padding:2px;">		<div class="l-loading" style="display:block" id="pageloading"></div>    	<div id="maingrid"></div>    	<!-- 查询 -->    	<div id="targetQuery" class="self-form" style="display:none;">        	<table class="self-table">    			<tr>    				<td width="90px">真实姓名</td>    				<td><input type="text" id="queryUserName" value=""></td>    			</tr>    			<tr>    				<td width="90px">登录名称</td>    				<td><input type="text" id="queryLogonName" value=""></td>    			</tr>    		</table>    	</div>    	<!-- 修改 -->    	<div id="targetEdit" class="self-form" style="display:none;">        	<table class="self-table">    			<tr>    				<td width="90px">真实姓名</td>    				<td><input type="text" id="editUserName" value=""></td>    			</tr>    			<tr>    				<td width="90px">登录名称</td>    				<td><input type="text" id="editLogonName" value=""></td>    			</tr>    			<tr>    				<td width="90px">用户描述</td>    				<td><input type="text" id="editUserDesc" value=""></td>    			</tr>    		</table>    	</div>    	<!-- 新增 -->    	<div id="targetAdd" class="self-form" style="display:none;">        	<table class="self-table">    			<tr>    				<td width="90px">真实姓名</td>    				<td><input type="text" id="addUserName" value=""></td>    			</tr>    			<tr>    				<td width="90px">登录名称</td>    				<td><input type="text" id="addLogonName" value=""></td>    			</tr>    			<tr>    				<td width="90px">密码</td>    				<td><input type="text" id="addPassword" value=""></td>    			</tr>    			<tr>    				<td width="90px">用户描述</td>    				<td><input type="text" id="addUserDesc" value=""></td>    			</tr>    		</table>    	</div>    	<input type="hidden" id="userId" value=""/>	</body></html>